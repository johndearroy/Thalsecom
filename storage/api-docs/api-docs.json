    "components": {
        "schemas": {
            "LoginRequest": {
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "example@thalsecom.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "password"
                    }
                },
                "type": "object"
            },
            "RegisterRequest": {
                "required": [
                    "name",
                    "email",
                    "password"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Dear Roy"
                    },
                    "email": {
                        "type": "string",
                        "example": "example@thalsecom.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "password"
                    }
                },
                "type": "object"
            },
            "StoreProductRequest": {
                "required": [
                    "name",
                    "base_price",
                    "sku"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Gaming Laptop"
                    },
                    "description": {
                        "type": "string",
                        "example": "High performance laptop"
                    },
                    "base_price": {
                        "type": "number",
                        "format": "float",
                        "example": 1299.99
                    },
                    "sku": {
                        "type": "string",
                        "example": "LAPTOP-001"
                    },
                    "is_active": {
                        "type": "boolean",
                        "example": true
                    },
                    "variants": {
                        "type": "array",
                        "items": {
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "example": "16GB RAM"
                                },
                                "sku": {
                                    "type": "string",
                                    "example": "LAPTOP-001-V1"
                                },
                                "price": {
                                    "type": "number",
                                    "format": "float",
                                    "example": 1299.99
                                },
                                "stock_quantity": {
                                    "type": "integer",
                                    "example": 50
                                },
                                "attributes": {
                                    "type": "object",
                                    "example": {
                                        "ram": "16GB",
                                        "storage": "512GB"
                                    }
                                }
                            },
                            "type": "object"
                        }
                    }
                },
                "type": "object"
            },
            "UpdateProductRequest": {
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Gaming Laptop Pro"
                    },
                    "description": {
                        "type": "string",
                        "example": "Updated description"
                    },
                    "base_price": {
                        "type": "number",
                        "format": "float",
                        "example": 1399.99
                    },
                    "is_active": {
                        "type": "boolean",
                        "example": true
                    }
                },
                "type": "object"
            },
            "StoreOrderRequest": {
                "required": [
                    "shipping_address",
                    "items"
                ],
                "properties": {
                    "shipping_address": {
                        "type": "string",
                        "example": "123 Main St, City, State 12345"
                    },
                    "billing_address": {
                        "type": "string",
                        "example": "123 Main St, City, State 12345"
                    },
                    "notes": {
                        "type": "string",
                        "example": "Please deliver in the morning"
                    },
                    "items": {
                        "type": "array",
                        "items": {
                            "properties": {
                                "variant_id": {
                                    "type": "integer",
                                    "example": 1
                                },
                                "quantity": {
                                    "type": "integer",
                                    "example": 2
                                }
                            },
                            "type": "object"
                        }
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
